@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Index</title>
    <link href="../../Lib/jquery-easyui/themes/default/easyui.css" rel="stylesheet" />
    <link href="../../Lib/jquery-easyui/themes/icon.css" rel="stylesheet" />
    
    <script src="../../Lib/jquery/jquery-1.8.0.min.js"></script>
    <script src="../../Lib/jquery-easyui/jquery.easyui.min.js"></script>
    <script src="../../Lib/jquery-easyui/locale/easyui-lang-zh_CN.js"></script>
    <script src="../../Lib/Ajax/jquery.unobtrusive-ajax.js"></script>
    <script src="../../Scripts/ControllerViewScript/EditPass.js" type="text/javascript"></script>
</head>
<body>
    
    <!----------------------------修改密码部分------开始---------------------->
        <div id="editDiv">
            @{
                using (Ajax.BeginForm("EditPassword", "UserInfo", new AjaxOptions() { HttpMethod = "Post", OnSuccess = "afterEditPass" }))
                {
                    <table>
                        <tr>
                            <td>&nbsp;&nbsp;原密码：</td>
                            <td>
                                <input type="password" name="OldPass" id="OldPass" tabindex="11" onkeypress="if(event.keyCode==13){event.keyCode=0;return false;}"/><font color="red" size="2">*</font>
                            </td>
                        </tr>
                        <tr>
                            <td>&nbsp;&nbsp;新密码：</td>
                            <td>
                                <input type="password" id="NewPass" name="NewPass" tabindex="12" onkeypress="if(event.keyCode==13){event.keyCode=0;return false;}"/><font color="red" size="2">*</font>
                            </td>
                        </tr>
                        <tr>
                            <td>&nbsp;&nbsp;密码确认：</td>
                            <td>
                                <input type="password" id="ConfPass" name="ConfPass" tabindex="13" onkeypress="if(event.keyCode==13){event.keyCode=0;return false;}"/><font color="red" size="2">*</font>
                            </td>
                        </tr>
                        <tr>
                            <td>&nbsp;&nbsp;&nbsp;<input type="submit" name="save" id="save" value="保存" /></td>
                            <td>
                                &nbsp;&nbsp;<input type="button" id="close" name="close" value="取消" /><font color="red" size="2">*</font>
                            </td>
                        </tr>
                    </table>
                }
            }
        </div>
        <!----------------------------修改密码部分------结束---------------------->
</body>
</html>
