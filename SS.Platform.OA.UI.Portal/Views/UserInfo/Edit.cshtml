@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>修改用户信息</title>
    <link href="../../lib/ligerUI/skins/Aqua/css/ligerui-all.css" rel="stylesheet" type="text/css" />
    <link href="../../lib/ligerUI/skins/Gray/css/all.css" rel="stylesheet" />
    <link href="../../css/ControllerViewCss/UserInfo_Edit.css" rel="stylesheet" />
    <script src="../../lib/jquery/jquery-1.9.0.min.js" type="text/javascript"></script>
    <script src="../../Lib/jquery.form.js" type="text/javascript"></script>
    <script src="../../lib/ligerUI/js/ligerui.all.js" type="text/javascript"></script>
    <script src="../../js/ControllerViewScript/UserInfo_Edit.js" type="text/javascript"></script>
</head>
<body>
    <!----------------------------修改部分------开始---------------------->
    <div id="editDiv">
        <form id="userEdit" class="liger-form" action="/UserInfo/EditSave">
            <div class="fields">
                <input id="ID" type="hidden" name="ID"/>
                <input id="Pwd" type="hidden" name="Pwd"/> 
                <input id="SubBy" type="hidden" name="SubBy"/>
                <input id="SubTime" type="hidden" name="SubTime"/> 

                <input data-type="text" data-label="登录名称" id="Code" name="Code" data-disabled  ="true"  validate="{required:true}"/>
                <input data-type="text" data-label="显示名称" name="Name" data-newline="false" validate="{required:true}" />
                <input data-type="text" data-label="QQ号码" name="QQNum" />
                <input data-type="checkbox" data-label="生效" id="TakeEffect1" name="TakeEffect1" data-newline="false" />
                <input type="hidden" id="TakeEffect" name="TakeEffect" />
                <input data-type="text" data-label="邮箱地址" name="Mail" />
                <input data-type="date" data-label="生效日期" name="TakeEffectTime" data-editor="{showTime:false}" data-newline="false" />
                <input data-type="text" data-label="手机号码" name="Phone" />
                <input data-type="date" data-label="失效日期" name="LoseEffectTime" value="2010-10-12" data-newline="false" />
                <input data-type="textarea" data-label="备注" name="Remark" />
            </div>
            <div class="buttons">
                <input data-text="保存" class="l-button l-button-submit" data-click="doSave" data-width="80" />
                <input data-text="关闭" class="l-button l-button-reset" data-click="doClose" data-width="80" />
            </div>
        </form>
    </div>
    <!----------------------------修改部分------结束---------------------->
</body>
</html>
