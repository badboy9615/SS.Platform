<script type="text/javascript">

    var LINKWIDTH = 90, LINKHEIGHT = 90, TASKBARHEIGHT = 43;
    var winlinksul = $("#winlinks ul");

    //你点击图标的时候弹出一个对话框
    function f_open(url, title, icon, width, height) {
        var win = $.ligerDialog.open(
        {
            height: height, url: url, width: width, showMax: true, showToggle: true, showMin: true, isResize: true, modal: false, title: title, slide: false, buttons: [
              {
                  text: '返回', onclick: function (item, Dialog, index) {
                      win.hide();
                  }
              }
            ]
        });
        var task = jQuery.ligerui.win.tasks[win.id];
        if (task) {
            $(".l-taskbar-task-icon:first", task).html('<img src="' + icon + '" />');
        }
        return win;
    }


    //图标数据
    var links = [
            { icon: '../../Lib/Content/Images/3DSMAX.png', title: '用户组', url: '/UserGroup/Index', width: 717, height: 530 },
            { icon: '../../Lib/Content/Images/3DSMAX.png', title: '用户管理', url: '/UserInfo/index', width: 717, height: 530 },
            { icon: '../../Lib/Content/Images/3DSMAX.png', title: '部门管理', url: '/Department/index', width: 937, height: 618 },
            { icon: '../../Lib/Content/Images/3DSMAX.png', title: '角色管理', url: '/Role/index', width: 717, height: 530 },
            { icon: '../../Lib/Content/Images/Program Files Folder.png', title: '权限管理', url: '/ActionInfo/Index', width: 937, height: 615 },
            { icon: '../../Lib/Content/Images/Program Files Folder.png', title: '模块管理', url: '/Module/Index', width: 717, height: 530 },
            { icon: '../../Lib/Content/Images/Alien Folder.png', title: '功能管理', url: '/Control/Index', width: 725, height: 535 },
            { icon: '../../Lib/Content/Images/Xp-G5 006.png', title: '部门用户', url: '/DepartmentUserinfo/Index', width: 937, height: 615 },
            { icon: '../../Lib/Content/Images/Xp-G5 006.png', title: '角色分配', url: '/RoleDistribute/Index', width: 937, height: 615 },
            { icon: '../../Lib/Content/Images/Alien Folder.png', title: '权限分配', url: '/ActionDistribute/Index', width: 937, height: 615 },
             { icon: '../../Lib/Content/Images/Alien Folder.png', title: '负责人', url: '/Master/Index', width: 937, height: 615 },
             { icon: '../../Lib/Content/Images/Xp-G5 006.png', title: '特殊权限', url: '/R_User_ActionInfo/Index', width: 937, height: 615 },
             { icon: '../../Lib/Content/Images/3DSMAX.png', title: '分组', url: '../grid/groupable/checkbox.htm' }
    ];

    //当浏览器窗口改变大小执行此方法重排咱们的所有的图标
    function onResize() {
        var linksHeight = $(window).height() - 80 - TASKBARHEIGHT;
        var winlinks = $("#winlinks");
        winlinks.height(linksHeight);
        var colMaxNumber = parseInt(linksHeight / LINKHEIGHT);//一列最多显示几个快捷方式
        for (var i = 0, l = links.length; i < l; i++) {
            var link = links[i];
            var jlink = $("li[linkindex=" + i + "]", winlinks);
            var top = (i % colMaxNumber) * LINKHEIGHT, left = parseInt(i / colMaxNumber) * LINKWIDTH;
            if (isNaN(top) || isNaN(left)) continue;
            jlink.css({ top: top, left: left });
        }
    }

    //遍历所有的图标数据，然后创建一个 图片放到ul里面去。
    function linksInit() {
        for (var i = 0, l = links.length; i < l; i++) {
            var link = links[i];
            var jlink;
            var jlink = $("<li></li>");
            jlink.attr("linkindex", i);
            jlink.append("<img src='" + link.icon + "' />");
            jlink.append("<span>" + link.title + "</span>");
            jlink.append("<div class='bg'></div>");
            jlink.hover(function () {
                $(this).addClass("l-over");
            }, function () {
                $(this).removeClass("l-over");
            }).click(function () {
                var linkindex = $(this).attr("linkindex");
                var link = links[linkindex];
                f_open(link.url, link.title, link.icon,link.width,link.height);
            });
            jlink.appendTo(winlinksul);
        }

    }

    $(window).resize(onResize);
    $.ligerui.win.removeTaskbar = function () { }; //不允许移除
    $.ligerui.win.createTaskbar(); //页面加载时创建任务栏

    linksInit();
    onResize();

    $("#layout1").ligerLayout();

    setInterval("getTime();", 1000); //每隔一秒执行一次  })

    function getTime() {
        var myDate = new Date();
        var date = myDate.toLocaleDateString();
        var hours = myDate.getHours();
        var minutes = myDate.getMinutes();
        var seconds = myDate.getSeconds();
        if (hours < 10) { hours = "0" + hours; }
        if (minutes < 10) { minutes = "0" + minutes; }
        if (seconds < 10) { seconds = "0" + seconds; }

        $("#spTime").html(date + "&nbsp;&nbsp;&nbsp;" + hours + ":" + minutes + ":" + seconds); //将值赋给div  
    }

</script>
